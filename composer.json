{
    "name": "ilario/php-dep-analysis",
    "description": "Dependency analysis tool for PHP projects",
    "type": "project",
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.11",
        "facile-it/facile-coding-standard": "^1.2"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Pybatt\\PhpDepAnalysis\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Ilario Pierbattista",
            "email": "pierbattista.ilario@gmail.com"
        }
    ],
    "require": {
        "php": "~8.1",
        "symfony/console": "^6.4",
        "nikic/php-parser": "^5.0"
    },
    "config": {
        "allow-plugins": {
            "facile-it/facile-coding-standard": true
        }
    },
    "scripts": {
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix --diff"
    }
}
